WindowManager:
    StartingScreen:
    StatusScreen:
    GraphScreen:

#1st screen
<StartingScreen>:
    name: "StartingScreen"
    GridLayout:
        rows:2

        Button:
            text: "Status"
            on_release:
                app.root.current = "StatusScreen"
                root.manager.transition.direction = "left"


        Button:
            text: "Graph"
            on_release:
                app.root.current = "GraphScreen"
                root.manager.transition.direction = "left"


<GraphScreen>:
    name:"GraphScreen"

    GridLayout:
        rows:2
        Button:
            text:"Back"
            on_release:
                app.root.current = "StartingScreen"
                root.manager.transition.direction = "right"



        ScrollView:
            Label:
                text:"Graph to be displayed"


<StatusScreen>:
    name:"StatusScreen"

    #have a scrollview with the patients
    GridLayout:
        rows:2

        Button:
            text: "Back"
            on_release:
                app.root.current = "StartingScreen"
                root.manager.transition.direction = "right"

        ScrollViewExample:




<MainWidget>:
    Button:
        text: "Hello"


<StackLayoutExample>:
    # left-right, top-bottom
    # orientation : "rl-tb" #right to left , top to bottom
    # padding: ("20dp", "20dp", "20dp","20dp")
    # spacing: "20dp", "20dp" #horizontally, vertically are 20dp

#An option for a lot of patients!
<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1 , None #horizontal is 1 and vertical is none
        height: self.minimum_height #this makes the scrollview to scroll it just enough for making it possible to see the contents!
    #scroll view can only take 1 child!

